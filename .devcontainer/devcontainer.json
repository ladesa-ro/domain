{
  "$schema": "https://github.com/devcontainers/spec/raw/refs/heads/main/schemas/devContainer.schema.json",
  "name": "@ladesa-ro/domain",
  "build": {
    "dockerfile": "../Containerfile",
    "target": "devcontainer",
    "context": "../"
  },
  "shutdownAction": "stopContainer",
  "workspaceFolder": "/var/lib/ladesa-ro/sources/domain",
  "workspaceMount": "source=${localWorkspaceFolder}/,target=/var/lib/ladesa-ro/sources/domain,type=bind,consistency=cached",
  "postCreateCommand": "echo Ambiente pronto",
  "postAttachCommand": "sudo chown -R debian:debian /var/lib/ladesa-ro/sources/domain",
  "customizations": {
    "vscode": {
      "extensions": [
        "typespec.typespec-vscode",
        "biomejs.biome",
        "redhat.vscode-yaml",
        "ms-dotnettools.csdevkit"
      ],
      "settings": {
        "terminal.integrated.profiles.linux": {
          "bash": { "path": "/bin/bash" }
        },
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "containerUser": "debian",
  "remoteUser": "debian"
}
